@page "/"
@using Arkanis.Overlay.Components.Shared.Dialogs
@using Arkanis.Overlay.Domain.Models.Keyboard
@inject IDialogService DialogService

<PageTitle>Home</PageTitle>

<MudContainer Class="mt-4">
    <KeyboardShortcutBadge Key="@KeyboardKey.KeyA" OnKeyPress="@OnKeyPress">
        <MudPaper Class="pa-4">
            <MudText tabindex="0">
                This is text.
            </MudText>
            <MudTextField T="string" tabindex="1"/>
            <MudButton OnClick="() => AboutDialog.ShowAsync(DialogService)">
                Open about dialog
            </MudButton>
        </MudPaper>
    </KeyboardShortcutBadge>
</MudContainer>

@code
{
    private void OnKeyPress()
    {
        Console.WriteLine("Target key pressed!");
    }
}
