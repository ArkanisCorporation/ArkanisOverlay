@using Arkanis.Overlay.Host.Server.Services
@if (Downloads is DownloadsMissing)
{
    <MudButton Variant="@Variant.Outlined"
               Color="@Color.Primary"
               Disabled>
        Installer unavailable
    </MudButton>
}
else if (Downloads is ReleaseDownloads releaseDownloads)
{
    <MudButton Variant="@Variant.Filled"
               Color="@Color.Primary"
               StartIcon="@Icons.Material.Filled.InstallDesktop"
               Href="@releaseDownloads.InstallerAsset.BrowserDownloadUrl"
               Target="_blank">
        Installer @releaseDownloads.Release.TagName
    </MudButton>
}

@code
{

    [Parameter]
    [EditorRequired]
    public required Downloads Downloads { get; set; }

}
