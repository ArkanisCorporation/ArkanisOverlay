@using Arkanis.Overlay.Host.Server.Services
@if (Downloads is DownloadsMissing)
{
    <MudButton Variant="@Variant.Outlined"
               Color="@Color.Primary"
               Disabled>
        Portable unavailable
    </MudButton>
}
else if (Downloads is ReleaseDownloads releaseDownloads)
{
    <MudButton Variant="@Variant.Filled"
               Color="@Color.Primary"
               StartIcon="@Icons.Material.Filled.FileDownload"
               Href="@releaseDownloads.PortableAsset.BrowserDownloadUrl"
               Target="_blank">
        Portable @releaseDownloads.Release.TagName
    </MudButton>
}

@code
{

    [Parameter]
    [EditorRequired]
    public required Downloads Downloads { get; set; }

}
