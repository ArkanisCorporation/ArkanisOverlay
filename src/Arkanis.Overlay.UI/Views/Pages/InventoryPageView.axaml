<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Arkanis.Overlay.UI.ViewModels.Pages"
             xmlns:viewModels="clr-namespace:Arkanis.Overlay.UI.ViewModels.Pages"
             x:Class="Arkanis.Overlay.UI.Views.Pages.InventoryPageView"
             x:DataType="vm:InventoryPageViewModel">
    <Design.DataContext>
        <viewModels:InventoryPageViewModel />
    </Design.DataContext>

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <TextBlock Text="Hi, I'm the inventory view!" />
        <TextBlock Text="{Binding UrlPathSegment}" />
    </StackPanel>
</UserControl>
